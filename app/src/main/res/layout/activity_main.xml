<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:padding="@dimen/cardview_compat_inset_shadow"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/cardColor2"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:text="Doble click"
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/view1"
            android:layout_marginTop="0dp"
            android:background="@color/cardColor1"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:text="Un click"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/view1"
            android:layout_marginTop="100dp"
            android:background="@color/cardColor3"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:text="Desliza a la izquierda"
            android:textSize="30dp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>